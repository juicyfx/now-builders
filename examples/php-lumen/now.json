{
  "version": 2,
  "name": "now-builders-php-lumen",
  "scope": "juicyfx",
  "regions": ["all"],
  "public": true,
  "builds": [
    {
      "src": "public/*.php",
      "use": "@juicyfx/php@canary",
      "config": {
        "mode": "server",
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ]
}
